.c.obj:
        cl.exe $(CFLAGS) /Fo$*.obj /c $*.c

all: glpk_4_39.dll glpsol.exe

glpk_4_39.dll: $(OBJSET)
        cl.exe $(CFLAGS) /LD /Feglpk_4_39.dll ..\src\*.obj \
                ..\src\amd\*.obj ..\src\colamd\*.obj glpk_4_39.def

glpsol.exe: ..\examples\glpsol.obj glpk_4_39.dll
        cl.exe $(CFLAGS) /Feglpsol.exe ..\examples\glpsol.obj \
                glpk_4_39.lib

check: glpsol.exe
        .\glpsol.exe --mps ..\examples\plan.mps
